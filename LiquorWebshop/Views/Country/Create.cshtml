@model LiquorWebshop.Models.Country

<form method="post">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text">Add Country</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-primary" style="width:150px">Add</button>
        <a asp-controller="Country" asp-action="List" class="btn btn-outline-primary" style="width:150px">Back</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}